<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/longshortLayoutTuto"
    android:layout_width="874dp"
    android:layout_height="618dp"
    android:layout_gravity="center"
    android:background="@drawable/short_bg_help" >

    

    <Button
        android:id="@+id/longpic"
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:layout_x="260dp"
        android:layout_y="329dp"
        android:background="@drawable/rubber_long"
        android:visibility="visible" />

    <Button
        android:id="@+id/shortpic"
        android:layout_width="250dp"
        android:layout_height="130dp"
        android:layout_x="315dp"
        android:layout_y="436dp"
        android:background="@drawable/rubber_shot"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/ansLong"
        android:layout_width="wrap_content"
        android:layout_height="289dp"
        android:layout_x="185dp"
        android:layout_y="296dp"
        android:background="@drawable/help_rectang2"
        android:visibility="invisible" />
    
    <ImageView
        android:id="@+id/insLong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="677dp"
        android:layout_y="127dp"
        android:background="@drawable/finger"
        android:visibility="invisible" />

    <Button
        android:id="@+id/bt_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="761dp"
        android:layout_y="552dp"
        android:background="@drawable/icon_skip"
        android:clickable="true"
        android:visibility="visible" />

</AbsoluteLayout>