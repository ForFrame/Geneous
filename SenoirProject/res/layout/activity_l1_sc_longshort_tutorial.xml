<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/longshortLayoutTuto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/short_bg_help" >

    <Button
        android:id="@+id/longpic"
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:layout_x="326dp"
        android:layout_y="401dp"
        android:background="@drawable/rubber_long"
        android:visibility="visible" />

    <Button
        android:id="@+id/shortpic"
        android:layout_width="250dp"
        android:layout_height="130dp"
        android:layout_x="381dp"
        android:layout_y="508dp"
        android:background="@drawable/rubber_shot"
        android:visibility="visible" />
    
    <ImageView
        android:id="@+id/ansLong"
        android:layout_width="wrap_content"
        android:layout_height="289dp"
        android:layout_x="255dp"
        android:layout_y="376dp"
        android:background="@drawable/help_rectang2"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/insLong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="692dp"
        android:layout_y="143dp"
        android:background="@drawable/pin_long"
        android:visibility="invisible" />
    
    <Button
        android:id="@+id/bt_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="908dp"
        android:layout_y="653dp"
        android:background="@drawable/icon_skip"
        android:clickable="true"
        android:visibility="visible" />

</AbsoluteLayout>