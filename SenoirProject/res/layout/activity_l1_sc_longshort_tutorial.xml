<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/longshortLayoutTuto"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/short_bg_help" >

    <Button
        android:id="@+id/longpic"
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:layout_x="326dp"
        android:layout_y="401dp"
        android:background="@drawable/rubber_long"
        android:visibility="visible" />

    <Button
        android:id="@+id/shortpic"
        android:layout_width="250dp"
        android:layout_height="130dp"
        android:layout_x="381dp"
        android:layout_y="508dp"
        android:background="@drawable/rubber_shot"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/longcorrect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="238dp"
        android:layout_y="391dp"
        android:background="@drawable/longshort_tuto"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/shortcorrect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="244dp"
        android:layout_y="514dp"
        android:background="@drawable/longshort_tuto"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/showcorrect"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:layout_x="256dp"
        android:layout_y="96dp"
        android:background="@drawable/smile"
        android:visibility="invisible" />

</AbsoluteLayout>