<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

   
      <Button
            android1:id="@+id/loginn"
            android1:layout_width="127dp"
            android1:layout_height="wrap_content"
            android1:layout_x="849dp"
            android1:layout_y="32dp"
            android1:background="@drawable/login_txt" />
      
       <Button
           android1:id="@+id/maintopolice1"
           android1:layout_width="175dp"
           android1:layout_height="132dp"
           android1:layout_x="9dp"
           android1:layout_y="43dp"
           android1:background="@drawable/policestation_main" />
       
        <Button
            android1:id="@+id/maintomarket1"
            android1:layout_width="206dp"
            android1:layout_height="142dp"
            android1:layout_x="25dp"
            android1:layout_y="401dp"
            android1:background="@drawable/market_main" />

        <Button
         android1:id="@+id/maintohouse1"
         android1:layout_width="188dp"
         android1:layout_height="149dp"
         android1:layout_x="308dp"
         android1:layout_y="240dp"
         android1:background="@drawable/home_main" />
        
       <Button
           android1:id="@+id/maintoschool"
           android1:layout_width="222dp"
           android1:layout_height="122dp"
           android1:layout_x="305dp"
           android1:layout_y="53dp"
           android1:background="@drawable/school_main" />

      <Button
          android1:id="@+id/maintofarm1"
          android1:layout_width="199dp"
          android1:layout_height="143dp"
          android1:layout_x="777dp"
          android1:layout_y="263dp"
          android1:background="@drawable/farm_main" />
      
      <Button
         android1:id="@+id/maintohospital1"
         android1:layout_width="170dp"
         android1:layout_height="148dp"
         android1:layout_x="482dp"
         android1:layout_y="479dp"
         android1:background="@drawable/hospital_main" />
      
      <Button
            android1:id="@+id/logout"
            android1:layout_width="127dp"
            android1:layout_height="wrap_content"
            android1:layout_x="849dp"
            android1:layout_y="32dp"
           	android1:background="@drawable/logout_txt" />

      <TextView
             android1:id="@+id/textUser"
             android1:layout_width="200dp"
             android1:layout_height="wrap_content"
             android1:layout_x="633dp"
             android1:layout_y="30dp"
             android1:gravity="right|center_vertical"
             android1:text="Username"
             android1:textAppearance="?android:attr/textAppearanceLarge"
             android1:textSize="16pt"
             android1:textStyle="bold"
             android1:typeface="sans" />

     <Button
         android1:id="@+id/showHighScore"
         android1:layout_width="wrap_content"
         android1:layout_height="wrap_content"
         android1:layout_x="-5dp"
         android1:layout_y="650dp"
         android1:background="@drawable/icon_highscore" />

</AbsoluteLayout>
