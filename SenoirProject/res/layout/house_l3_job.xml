<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/jobLayout"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/hs_l3_bg1" >

    <TextView
        android:id="@+id/textTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="88dp"
        android:layout_y="26dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <TextView
        android:id="@+id/textUser"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_x="656dp"
        android:layout_y="1dp"
        android:gravity="right|center_vertical"
        android:text="Username"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="16pt"
        android:textStyle="bold"
        android:typeface="sans" />

    <Button
        android:id="@+id/loginn"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_x="872dp"
        android:layout_y="1dp"
        android:background="@drawable/login_txt" />

    <Button
        android:id="@+id/logout"
        android:layout_width="127dp"
        android:layout_height="wrap_content"
        android:layout_x="872dp"
        android:layout_y="1dp"
        android:background="@drawable/logout_txt" />
    
    <ImageView
        android:id="@+id/finger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="700dp"
        android:layout_y="170dp"
        android:background="@drawable/finger"
        android:visibility="invisible" />
    
    <Button
        android:id="@+id/picans1"
        android:layout_width="273dp"
        android:layout_height="335dp"
        android:layout_x="230dp"
        android:layout_y="230dp"
        android:background="@drawable/hs_l3_ans1_1"
        android:visibility="visible" />
    
    <Button
        android:id="@+id/picans2"
        android:layout_width="273dp"
        android:layout_height="335dp"
        android:layout_x="530dp"
        android:layout_y="230dp"
        android:background="@drawable/hs_l3_ans1_2"
        android:visibility="visible" />
    
     <ImageView
         android:id="@+id/showAnswer"
         android:layout_width="630dp"
         android:layout_height="380dp"
         android:layout_x="200dp"
         android:layout_y="210dp"
         android:background="@drawable/hs_l3_help"
         android:visibility="invisible" />
     
    <TextView
        android:id="@+id/currentitem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="103dp"
        android:layout_y="56dp"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    <ImageView
        android:id="@+id/showwrong"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:layout_x="255dp"
        android:layout_y="94dp"
        android:background="@drawable/weak"
        android:clickable="true"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/showcorrect"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:layout_x="255dp"
        android:layout_y="94dp"
        android:background="@drawable/smile"
        android:clickable="true"
        android:visibility="invisible" />

    <Button
        android:id="@+id/jobHelp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="830dp"
        android:layout_y="654dp"
        android:background="@drawable/icon_help2" />

    <Button
        android:id="@+id/jobbackHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="933dp"
        android:layout_y="654dp"
        android:background="@drawable/icon_home1" />

   
    

    

</AbsoluteLayout>