<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nearfarLayout"
    android:layout_width="874dp"
    android:layout_height="618dp"
    android:layout_gravity="center"
    android:background="@drawable/pl2_tutobg" >

    <ImageView
        android:id="@+id/showAnswer"
        android:layout_width="219dp"
        android:layout_height="355dp"
        android:layout_x="66dp"
        android:layout_y="72dp"
        android:background="@drawable/pl1_help"
        android:visibility="visible" />

    <ImageView
        android:id="@+id/helpNearFar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="768dp"
        android:layout_y="33dp"
        android:background="@drawable/finger"
        android:visibility="visible" />

    <Button
        android:id="@+id/bt_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="750dp"
        android:layout_y="543dp"
        android:background="@drawable/icon_skip"
        android:clickable="true"
        android:visibility="visible" />

</AbsoluteLayout>