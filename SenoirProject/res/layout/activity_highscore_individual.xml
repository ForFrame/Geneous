	<Spinner
	    android:id="@+id/gameSelection"
	    android:layout_width="330dp"
	    android:layout_height="50dp"
	    android:layout_marginLeft="100dp"
	    android:layout_marginTop="165dp"
	    android:entries="@array/game"
	    android:gravity="center"
	    android:text="@string/selectgame"
	    android:textSize="10pt" />
	
	<Button
	    android:id="@+id/viewHighscore"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="right"
	    android:layout_marginRight="150dp"
	    android:layout_marginTop="-50dp"
	    android:background="@drawable/highscore_bt1" />

	<Button
	    android:id="@+id/viewGraph"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="right"
	    android:layout_marginRight="230dp"
	    android:layout_marginTop="-45dp"
	    android:background="@drawable/highscore_bt" />
	
	

	<TextView
	    android:id="@+id/GameText"
	    android:layout_width="660dp"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="105dp"
	    android:layout_marginTop="5dp"
	    android:gravity="center"
	    android:text="Large Text"
	    android:textAppearance="?android:attr/textAppearanceLarge" />
	
	<!-- List Divider -->
	<View android:layout_width="500dp"
		android:layout_height="1dip"
		android:background="?android:attr/listDivider" 
		android:layout_gravity="center_vertical|center_horizontal" />
	
	<!-- ListView (grid_items) -->

	<LinearLayout
	    android:id="@+id/layout"
	    android:layout_width="660dp"
	    android:layout_height="240dp"
	    android:layout_gravity="center_vertical|center_horizontal|center"
	    android:layout_marginTop="60dp" >

	    <ListView
	        android:id="@+id/listview"
	        android:layout_width="660dp"
	        android:layout_height="240dp"
	        android:layout_gravity="center_vertical|center_horizontal|center" >
	    </ListView>
	</LinearLayout>

	<Button
	    android:id="@+id/button1"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_gravity="right"
	    android:background="@drawable/icon_skip" />

</LinearLayout>
