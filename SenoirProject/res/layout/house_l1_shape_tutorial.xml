<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shapeLayout"
    android:layout_width="874dp"
    android:layout_height="618dp"
    android:layout_gravity="center"
    android:background="@drawable/house_l1_help_bg" >

    <ImageView
        android:id="@+id/showAnswer"
        android:layout_width="540dp"
        android:layout_height="250dp"
        android:layout_x="170dp"
        android:layout_y="215dp"
        android:background="@drawable/help_rectang2"
        android:visibility="invisible" />
    
      <ImageView
          android:id="@+id/helpshape"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_x="600dp"
          android:layout_y="150dp"
          android:background="@drawable/finger"
          android:visibility="visible" />
      
      <Button
        android:id="@+id/bt_skip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="757dp"
        android:layout_y="550dp"
        android:background="@drawable/icon_skip"
        android:clickable="true"
        android:visibility="visible" />
      

</AbsoluteLayout>