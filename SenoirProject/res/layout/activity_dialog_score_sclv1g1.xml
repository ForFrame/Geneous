<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_dialog"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/score_bg"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />
    
     <RatingBar
        android:id="@+id/ratingBar1"
        style="@style/starRatingBar"
        android:layout_width="575dp"
        android:layout_height="135dp"
        android:layout_x="209dp"
        android:layout_y="129dp"
        android:clickable="false"
        android:longClickable="false"
        android:max="100"
        android:numStars="5" />
     
    <Button
        android:id="@+id/scorehome"
        android:layout_width="165dp"
        android:layout_height="155dp"
        android:layout_x="95dp"
        android:layout_y="330dp"
        android:background="@drawable/score_home" />
    
    <Button
        android:id="@+id/scorenext"
        android:layout_width="165dp"
        android:layout_height="155dp"
        android:layout_x="695dp"
        android:layout_y="330dp"
        android:background="@drawable/score_next" />

    <Button
        android:id="@+id/scoreback"
        android:layout_width="165dp"
        android:layout_height="155dp"
        android:layout_x="395dp"
        android:layout_y="330dp"
        android:background="@drawable/score_back" />

   
    
</AbsoluteLayout>
