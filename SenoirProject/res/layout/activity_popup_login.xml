<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_popup_login"
    android:layout_width="874dp"
    android:layout_height="618dp"
    android:layout_gravity="center"
    android:background="@drawable/bg_login"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/usertext"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_x="311dp"
        android:layout_y="198dp"
        android:ems="10"
        android:hint="Username"
        android:maxLength="10" />

    <CheckBox
        android:id="@+id/checkContinueLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="314dp"
        android:layout_y="244dp"
        android:text="@string/continue_login"
        android:textSize="10pt"
        android:visibility="invisible" />

    <Button
        android:id="@+id/LoginBt"
        android:layout_width="138dp"
        android:layout_height="69dp"
        android:layout_x="207dp"
        android:layout_y="300dp"
        android:background="@drawable/button_login" />

    <Button
        android:id="@+id/regisBt"
        android:layout_width="138dp"
        android:layout_height="69dp"
        android:layout_x="393dp"
        android:layout_y="300dp"
        android:background="@drawable/button_regis" />

    <Button
        android:id="@+id/CancelLog"
        android:layout_width="138dp"
        android:layout_height="69dp"
        android:layout_x="570dp"
        android:layout_y="300dp"
        android:background="@drawable/cancel" />

</AbsoluteLayout>