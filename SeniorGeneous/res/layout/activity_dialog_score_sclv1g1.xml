<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_dialog"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/score_bg"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />
    <ImageView
        android:id="@+id/star0"
        android:layout_width="840dp"
        android:layout_height="170dp"
        android:layout_x="65dp"
        android:layout_y="70dp"
        android:background="@drawable/star_collor_0"
        android:visibility="invisible" />
    <ImageView
        android:id="@+id/star1"
        android:layout_width="840dp"
        android:layout_height="170dp"
        android:layout_x="65dp"
        android:layout_y="70dp"
        android:background="@drawable/star_collor_1" 
        android:visibility="invisible"/>
    
    <ImageView
        android:id="@+id/star2"
        android:layout_width="840dp"
        android:layout_height="170dp"
        android:layout_x="65dp"
        android:layout_y="70dp"
        android:background="@drawable/star_collor_2" 
        android:visibility="invisible"/>
    
    <ImageView
        android:id="@+id/star3"
        android:layout_width="840dp"
        android:layout_height="170dp"
        android:layout_x="65dp"
        android:layout_y="70dp"
        android:background="@drawable/star_collor_3" 
        android:visibility="invisible"/>
    
    <ImageView
        android:id="@+id/star4"
        android:layout_width="840dp"
        android:layout_height="170dp"
        android:layout_x="65dp"
        android:layout_y="70dp"
        android:background="@drawable/star_collor_4" 
        android:visibility="invisible"/>
    
    <ImageView
        android:id="@+id/star5"
        android:layout_width="840dp"
        android:layout_height="170dp"
        android:layout_x="65dp"
        android:layout_y="70dp"
        android:background="@drawable/star_collor_5" 
        android:visibility="invisible"/>

    <Button
        android:id="@+id/scorehome"
        android:layout_width="165dp"
        android:layout_height="155dp"
        android:layout_x="95dp"
        android:layout_y="330dp"
        android:background="@drawable/score_home" />
    
    <Button
        android:id="@+id/scorenext"
        android:layout_width="165dp"
        android:layout_height="155dp"
        android:layout_x="695dp"
        android:layout_y="330dp"
        android:background="@drawable/score_next" />

    <Button
        android:id="@+id/scoreback"
        android:layout_width="165dp"
        android:layout_height="155dp"
        android:layout_x="395dp"
        android:layout_y="330dp"
        android:background="@drawable/score_back" />

    

    
</AbsoluteLayout>
