<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_popup_login"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="100dp"
    android:layout_marginTop="30dp"
    android:background="@drawable/bg_login"
    android:orientation="vertical"
    android:padding="50dp" >
    
  	 <EditText
  	     android:id="@+id/usertext"
  	     android:layout_width="wrap_content"
  	     android:layout_height="wrap_content"
  	     android:layout_x="360dp"
  	     android:layout_y="150dp"
  	     android:ems="10" />

  	 <Button
  	     android:id="@+id/LoginBt"
  	     android:layout_width="175dp"
  	     android:layout_height="86dp"
  	     android:layout_x="360dp"
  	     android:layout_y="290dp"
  	     android:background="@drawable/button_login" />

  	 <Button
  	     android:id="@+id/regisBt"
  	     android:layout_width="176dp"
  	     android:layout_height="87dp"
  	     android:layout_x="360dp"
  	     android:layout_y="400dp"
  	     android:background="@drawable/button_regis" />

  	 <CheckBox
  	     android:id="@+id/checkContinueLogin"
  	     android:layout_width="263dp"
  	     android:layout_height="wrap_content"
  	     android:layout_x="350dp"
  	     android:layout_y="220dp"
  	     android:text="@string/continue_login" />
    
</AbsoluteLayout>